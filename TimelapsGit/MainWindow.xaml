<Window x:Class="TimelapsGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="{Binding CurrentMessage}" />
            <TextBlock Text="{Binding CurrentDate}" />
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Bottom">
            <Slider Minimum="0" Maximum="{Binding NumberOfChanges}" Value="{Binding SelectedCommitNumber}"></Slider>
        </StackPanel>
        
        <ListBox x:Name="_lines" ItemsSource="{Binding Lines}">
            
        </ListBox>
        
    </DockPanel>
</Window>
