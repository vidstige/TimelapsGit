<Window x:Class="TimelapsGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:TimelapsGit"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="{Binding CurrentMessage}" />
            <TextBlock Text="{Binding CurrentDate}" />
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Bottom">
            <Slider Minimum="1" Maximum="{Binding Commits.Count}" Value="{Binding SelectedCommitNumber}"></Slider>
        </StackPanel>
        
        <ListBox x:Name="_lines" ItemsSource="{Binding Lines}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="local:LineAndCommit" >
                    <Grid Background="{Binding BackgroundColor}" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock FontSize="10" Text="{Binding Commit.Author.Name}" />
                            <TextBlock FontSize="10" Text="{Binding Commit.CommitDate.LocalDateTime}" />
                        </StackPanel>
                        <TextBlock Grid.Column="1" FontSize="18" Text="{Binding Line}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
